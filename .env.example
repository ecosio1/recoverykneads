# Secure Environment Configuration for Recovery Kneads
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Server Configuration
PORT=3001
NODE_ENV=production

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://recoverykneads.com,https://www.recoverykneads.com

# Square Appointments API Configuration
# Get these values from your Square Developer Dashboard
SQUARE_APPLICATION_ID=your_square_application_id_here
SQUARE_LOCATION_ID=your_square_location_id_here
SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_ENVIRONMENT=production

# Email Configuration
NOTIFICATION_EMAIL=massagebyerikag@gmail.com
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Security Configuration
SESSION_SECRET=your_long_random_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database Configuration (if using a database)
DATABASE_URL=your_database_connection_string_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/booking-proxy.log